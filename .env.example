# Flask Configuration
FLASK_APP=app.py
FLASK_ENV=production
SECRET_KEY=your-secret-key-here
PORT=5001
HOST=0.0.0.0

# Supabase Credentials
SUPABASE_URL=your-supabase-url
SUPABASE_KEY=your-supabase-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Social Media Credentials
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
INSTAGRAM_CLIENT_ID=your-instagram-client-id
INSTAGRAM_CLIENT_SECRET=your-instagram-client-secret

# Google/YouTube Credentials
GOOGLE_CLIENT_ID=your-google-client-id
YOUTUBE_CLIENT_ID=your-youtube-client-id
YOUTUBE_CLIENT_SECRET=your-youtube-client-secret

# TikTok OAuth Credentials
TIKTOK_CLIENT_KEY=your-tiktok-client-key
TIKTOK_CLIENT_SECRET=your-tiktok-client-secret
TIKTOK_REDIRECT_URI=https://your-domain.com/social-auth/callback/tiktok

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# Domain Configuration
DOMAIN=your-domain.com

# API Keys
OPENAI_API_KEY=your-openai-api-key
DEEPSEEK_API_KEY=your-deepseek-api-key
GOOGLE_API_KEY=your-google-api-key

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=content_pipeline.log

# Video Processing
MAX_CLIP_DURATION=60
MIN_CLIP_DURATION=5
SILENCE_THRESHOLD=0.03
SILENCE_DURATION=0.5

# Text Generation
NUM_CAPTION_VARIATIONS=3
NUM_HASHTAGS=10

# Output Configuration
DEFAULT_OUTPUT_DIR=./output

# AI Provider Configuration
AI_PROVIDER=DeepSeek  # Options: openai, deepseek, gemini
USE_UNIFIED_TEXT_GENERATOR=true 